{{ form_start(form) }}
<div class="box">
    {% embed '@Forumify/components/tabs.html.twig' %}
        {% block tabs %}
            <button type="button" class="btn-link" data-tab-id="general">{{ 'milhq.settings.tab_general'|trans }}</button>
            {% if plugin_version('forumify/forumify-milhq-plugin', 'premium') %}
                <button type="button" class="btn-link" data-tab-id="profile">{{ 'milhq.settings.tab_profile'|trans }}</button>
                <button type="button" class="btn-link" data-tab-id="report-in">{{ 'milhq.settings.tab_report_in'|trans }}</button>
                <button type="button" class="btn-link" data-tab-id="operations">{{ 'milhq.settings.tab_operations'|trans }}</button>
                <button type="button" class="btn-link" data-tab-id="squadxml">{{ 'milhq.settings.tab_squadxml'|trans }}</button>
            {% endif %}
        {% endblock %}
        {% block tabpanels %}
            <div id="general">
                <h2>{{ 'milhq.settings.op_center'|trans }}</h2>
                {{ form_row(form.milhq__opcenter__announcement) }}
                <div class="rounded border pl-4 pr-4 pt-4 mb-4">
                    <h4>Milsim Units</h4>
                    <p class="mb-2">Looking to grow your unit? List your unit on Milsim Units for free to expand your ranks!</p>
                    <a href="https://milsimunits.com/ref/forumify" class="btn-primary mb-2" target="_blank">
                        <i class="ph ph-arrow-square-out"></i>
                        Learn more
                    </a>
                    <p class="text-small mb-4">Want to stand out from the competition? Use code <strong>FORUMIFY</strong> at checkout for <strong>15% off</strong> any paid tier for the first 6 months!</p>
                    {{ form_row(form.milhq__opcenter__milsimunits_link) }}
                </div>
                <h2>{{ 'milhq.settings.roster'|trans }}</h2>
                {{ form_row(form.milhq__roster__user_sort_order) }}
                <h2>{{ 'milhq.settings.enlistment'|trans }}</h2>
                {{ form_row(form.milhq__enlistment__status) }}
                {{ form_row(form.milhq__enlistment__form) }}
                {{ form_row(form.milhq__enlistment__roleplay_names) }}
                <h3 class="mb-2">{{ 'milhq.settings.enlistment_automations'|trans }}</h2>
                {{ form_row(form.milhq__enlistment__forum) }}
                {{ form_row(form.milhq__enlistment__role) }}
            </div>
            {% if plugin_version('forumify/forumify-milhq-plugin', 'premium') %}
                <div id="profile">
                    {{ form_row(form.milhq__profile__overwrite_display_names) }}
                    {{ form_row(form.milhq__profile__display_name_format) }}
                    {{ form_row(form.milhq__profile__overwrite_avatars) }}
                    {{ form_row(form.milhq__profile__overwrite_signatures) }}
                </div>
                <div id="report-in">
                    {{ form_row(form.milhq__report_in__enabled) }}
                    {{ form_row(form.milhq__report_in__enabled_status) }}
                    {{ form_row(form.milhq__report_in__period) }}
                    {{ form_row(form.milhq__report_in__warning_period) }}
                    {{ form_row(form.milhq__report_in__failure_status) }}
                </div>
                <div id="operations">
                    {{ form_row(form.milhq__operations__absent_notification) }}
                    {{ form_row(form.milhq__operations__absent_notification_message) }}
                    {{ form_row(form.milhq__operations__consecutive_absent_notification) }}
                    {{ form_row(form.milhq__operations__consecutive_absent_notification_count) }}
                    {{ form_row(form.milhq__operations__consecutive_absent_notification_message) }}
                    {{ form_row(form.milhq__operations__consecutive_absent_status) }}
                </div>
                <div id="squadxml">
                    <div class="alert-info mb-6">
                        <p class="mb-2">SquadXML is a feature used in the Arma games to identify members of different units. It adds your clantag to your member's names, displays your logo on some vehicles and uniforms, and much more.</p>
                        <p class="mb-2">Link to configure in your in-game profiles: <span class="text-italic">{{ absolute_url(path('milhq_squadxml_xml')) }}</span></p>
                        <a href="https://community.bistudio.com/wiki/squad.xml" target="_blank">Take a look at the official documentation to learn more.</a>
                    </div>
                    {{ form_row(form.milhq__squadxml__enabled) }}
                    {{ form_row(form.milhq__squadxml__name) }}
                    {{ form_row(form.milhq__squadxml__title) }}
                    {{ form_row(form.milhq__squadxml__nick) }}
                    {{ form_row(form.milhq__squadxml__email) }}
                    {{ form_row(form.milhq__squadxml__web) }}
                    {{ form_row(form.milhq__squadxml__new_picture) }}
                </div>
            {% endif %}
        {% endblock %}
    {% endembed %}
    <div class="flex justify-center items-center gap-2">
        <button type="submit" class="btn-primary">{{ 'save'|trans }}</button>
    </div>
</div>
{{ form_end(form) }}
