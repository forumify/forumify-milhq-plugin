    </a>
{% endif %}
{% if user is defined and is_granted('milhq.admin.soldiers.discharge') %}
    <a class="btn-link" href="{{ path('milhq_admin_soldier_discharge', { id: user.id }) }}">
        <i class="ph ph-door-open"></i> {{ 'milhq.admin.soldiers.list.actions.discharge'|trans }}
    </a>
{% endif %}
{% if user is defined and is_granted('milhq.admin.soldiers.delete') %}
    <hr>
    <a class="btn-link" href="{{ path('milhq_admin_soldier_delete', { identifier: user.id }) }}">
        <i class="ph ph-x"></i>{{ 'milhq.admin.soldiers.list.actions.delete'|trans }}
    </a>
{% endif %}
