{% set recordParams = soldier is defined ? { soldiers: soldier.id } : {} %}
{% if is_granted('milhq.admin.records.service_records.create') %}
    <a class="btn-link" href="{{ path('milhq_admin_record_form', recordParams|merge({ type: 'service' })) }}">
        <i class="ph ph-list-dashes"></i>{{ 'milhq.admin.soldiers.list.actions.service'|trans }}
    </a>
{% endif %}
{% if is_granted('milhq.admin.records.award_records.create') %}
    <a class="btn-link" href="{{ path('milhq_admin_record_form', recordParams|merge({ type: 'award' })) }}">
        <i class="ph ph-medal-military"></i>{{ 'milhq.admin.soldiers.list.actions.award'|trans }}
    </a>
{% endif %}
{% if is_granted('milhq.admin.records.combat_records.create') %}
    <a class="btn-link" href="{{ path('milhq_admin_record_form', recordParams|merge({ type: 'combat' })) }}">
        <i class="ph ph-crosshair"></i>{{ 'milhq.admin.soldiers.list.actions.combat'|trans }}
    </a>
{% endif %}
{% if is_granted('milhq.admin.records.rank_records.create') %}
    <a class="btn-link" href="{{ path('milhq_admin_record_form', recordParams|merge({ type: 'rank' })) }}">
        <i class="ph ph-caret-double-up"></i>{{ 'milhq.admin.soldiers.list.actions.rank'|trans }}
    </a>
{% endif %}
{% if is_granted('milhq.admin.records.assignment_records.create') %}
    <a class="btn-link" href="{{ path('milhq_admin_record_form', recordParams|merge({ type: 'assignment' })) }}">
        <i class="ph ph-identification-card"></i>{{ 'milhq.admin.soldiers.list.actions.assignment'|trans }}
    </a>
{% endif %}
{% if is_granted('milhq.admin.records.qualification_records.create') %}
    <a class="btn-link" href="{{ path('milhq_admin_record_form', recordParams|merge({ type: 'qualification' })) }}">
